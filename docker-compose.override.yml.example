version: "3"
services:
  db:
    volumes:
      - pgdata:/pgdata
    networks:
      - development
  www:
    volumes:
      - www-sync:/app:nocopy
      - bundle:/usr/local/bundle
      - root:/root # for bash history etc
    command:
      - ./docker-start.override
    networks:
      - development
volumes:
  www-sync:
    external: true
  bundle:
  pgdata:
  root:
networks:
  development:
